    <section class="section contact-section" id="next">
      <div class="container">
        <div class="row">
          <div class="col-md-7" data-aos="fade-up" data-aos-delay="100">
            {{form_start(form, {'attr':{'class':'bg-white p-md-5 p-4 mb-5 border'}})}}
            
              <div class="row">
                <div class="col-md-6 form-group">
                  <label class="text-black font-weight-bold" for="name">Numero de Habitacion:</label>
                  {{form_label(form.Habitacion," ")}}
                  {{form_widget(form.Habitacion,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="col-md-6 form-group">
                  <label class="text-black font-weight-bold" for="phone">Tipo:</label>
                  <input type="text" id="phone" class="form-control ">
                </div>
              </div>
          
              <div class="row">
                <div class="col-md-6 form-group">
                  <label class="text-black font-weight-bold" for="email">Fecha de Inicio:</label>
                  {{form_label(form.Fecha_Inicio," ")}}
                  {{form_widget(form.Fecha_Inicio,{'attr':{'class':'calendario1'}})}}
                </div>
                <div class="col-md-6 form-group">
                  <label class="text-black font-weight-bold" for="email">Fecha  de Salida:</label>
                  {{form_label(form.Fecha_Fin," ")}}
                  {{form_widget(form.Fecha_Fin,{'attr':{'class':'calendario2'}})}}
                </div>
              </div>

              

              <div class="row">
                <div class="col-md-6 form-group">
                  <label for="adults" class="font-weight-bold text-black">Adultos</label>
                  {{form_label(form.Adultos," ")}}
                  {{form_widget(form.Adultos,{'attr':{'class':'form-control'}})}}
                  
                </div>
                <div class="col-md-6 form-group">
                  <label for="children" class="font-weight-bold text-black">Ni√±os</label>
                  {{form_label(form.Menores," ")}}
                  {{form_widget(form.Menores,{'attr':{'class':'form-control'}})}}
                </div>
              </div>


              <div class="row">
                <div class="form-check col-md-3">
                
                  {{form_row(form.Desayuno,{'attr':{'class':'form-check-input col-md-3'}})}}
                 
                  
                </div>
                <div class="form-check col-md-3">
                      {{form_row(form.Comida,{'attr':{'class':'form-check-input col-md-3'}})}}
                  
                </div>
                <div class="form-check col-md-3">
                      {{form_row(form.Cena,{'attr':{'class':'form-check-input col-md-3'}})}}
                </div>
                <div class="form-check col-md-3">
                      {{form_row(form.Gim_Spa,{'attr':{'class':'form-check-input col-md-3'}})}}
                </div>
                
              </div>



              

              
              <div class="row">
                <div class="col-md-6 form-group">
                  <input type="submit" value="Reserve Now" class="btn btn-primary text-white py-3 px-5 font-weight-bold">
                </div>
              </div>
            {{form_end(form)}}

          </div>
         
        </div>
      </div>
    </section>

    

    
    
    
{% endblock %}
