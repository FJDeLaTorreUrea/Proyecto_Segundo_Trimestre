{% extends 'base.html.twig' %}

{% block title %}Registrese{% endblock %}

{% block body %}
<section class="site-hero overlay" style="background-image: url({{asset('imagenes/hero_4.jpg')}})" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row site-hero-inner justify-content-center align-items-center">
          <div class="col-md-10 text-center" data-aos="fade-up">
            <span class="custom-caption text-uppercase text-white d-block  mb-3">Bienvenido al paraiso de 5 estrellas <span class="fa fa-star text-primary"></span></span>
            <h1 class="heading">Registrarse</h1>
          </div>
        </div>
      </div>

      <a class="mouse smoothscroll" href="#next">
        <div class="mouse-icon">
          <span class="mouse-wheel"></span>
        </div>
      </a>
    </section>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.Nombre) }}
        {{ form_row(registrationForm.Apellidos) }}
        {{ form_row(registrationForm.Telefono) }}
        {{ form_row(registrationForm.Fecha_nacimiento) }}
        {{ form_row(registrationForm.Direccion) }}
        {{ form_row(registrationForm.Nacionalidad) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Registrame</button>
    {{ form_end(registrationForm) }}
    
{% endblock %}
